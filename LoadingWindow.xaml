    <Window x:Class="HelloWorld.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"            
        Title="Chargement" Height="280" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="White"
        BorderBrush="#2979FF"
        BorderThickness="1">

        <!-- Ajout d'un effet d'ombre pour la fenêtre -->
    <Window.Effect>
        <DropShadowEffect Color="#AAAAAA" Direction="315" 
                          ShadowDepth="5" Opacity="0.6" 
                          BlurRadius="8"/>
    </Window.Effect>
    <Window.Resources>
        <Style x:Key="UserStyle" TargetType="FrameworkElement">
            <!-- Définir vos propriétés de style ici -->
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Barre de titre -->
        <Border Height="30" VerticalAlignment="Top" 
                Background="#2979FF" MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Grid>
                <TextBlock Text="Chargement" Foreground="White" 
                           FontFamily="Segoe UI" FontSize="14" 
                           Margin="15,0,0,0" VerticalAlignment="Center"/>

                <!-- Bouton fermer (cercle blanc) -->
                <Button HorizontalAlignment="Right" Margin="0,0,10,0"
                        Width="14" Height="14" Background="White" 
                        Opacity="0.8" Click="CloseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Fill="{TemplateBinding Background}" Opacity="{TemplateBinding Opacity}"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
            <!-- Contenu principal : Ajuster les définitions de rangées pour donner plus d'espace au bouton -->
            <Grid Margin="20,40,20,20">
                <Grid.RowDefinitions>
                <!-- Hauteur minimale pour le texte -->
                    <RowDefinition Height="Auto" MinHeight="60"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

                <!-- Zone blanche pour le contenu -->
            <Border Grid.RowSpan="4" Background="White" CornerRadius="3" Margin="-5"/>

            <!-- Message de chargement -->
            <TextBlock x:Name="LoadingMessage" 
                       Grid.Row="0"
                       Text="Collecte des informations matérielles..."
                       TextWrapping="Wrap"
                       FontSize="16"
                       FontFamily="Segoe UI"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,15,0,5"
                       Foreground="#212121"/>

            <!-- Compteur de progression -->
            <TextBlock x:Name="ProgressCounter"
                       Grid.Row="1"
                       Text="1/5"
                       FontSize="14"
                       FontFamily="Segoe UI"
                       Foreground="#757575"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,10"/>

            <!-- Espace réservé pour l'indicateur visuel -->
            <Border Grid.Row="2" 
                    x:Name="LoadingIndicatorContainer"
                    Height="30"
                    Margin="30,0,30,20">
                <ProgressBar x:Name="LoadingProgressBar" IsIndeterminate="True" Height="20"
                             Foreground="#2979FF"
                             Background="#F5F5F5"
                             BorderBrush="#E0E0E0"/>
            </Border>
            <Grid Grid.Row="3" Margin="0,5,0,5">
                <!-- Bouton STOP standard au lieu du contrôle utilisateur -->
                <local:StopButton x:Name="StopButton"
                  HorizontalAlignment="Center" />
            </Grid>
        </Grid>
    </Grid>
</Window>